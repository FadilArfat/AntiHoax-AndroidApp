<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/background_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="160dp"
        android:id="@+id/LayoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="#FFF"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cara penggunaan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Cari Berita"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cari berita melalui search bar yang disediakan,dan hanya akan menampilkan
 dari situs yang terpercaya,dan tidak akan menampilkan dari situs yang tidak jelas"
            android:textSize="15dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Cari Berita Di Facebook"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mencari berita hoax di facebook berdasarkan fanpage Hoaxes Indonesia"
            android:textSize="15dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Lapor Hoax"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jika anda menemukan berita hoax segera laporkan melalui menu yang disediakan
laporan akan langsung dikirim ke email aduankonten@mail.kominfo.go.id"
            android:textSize="15dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTanya"
            android:text="Jika ada pertanyaan lebih lanjut silahkan tekan text ini!"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />
</RelativeLayout>