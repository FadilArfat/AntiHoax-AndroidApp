<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/background_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="160dp"
        android:id="@+id/LayoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="#FFF"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/emailET"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:drawableRight="@drawable/ic_mail_outline_black_24dp"
        android:hint="Email" />
        <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/passwordET"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
        android:layout_alignStart="@+id/emailET"
        android:layout_below="@+id/emailET"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:hint="Password"
        />
    <Button
        android:id="@+id/btn_register"
        android:background="@drawable/rec_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/emailET"
        android:layout_below="@+id/passwordET"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:text="Daftar" />
    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/btn_backtologin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_register"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginEnd="0dp"
        android:text="Sudah Punya Akun? Login Disini" />

    </LinearLayout>
    <ImageView
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />
</RelativeLayout>