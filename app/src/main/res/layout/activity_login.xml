<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/background_gradient"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="160dp"
        android:id="@+id/LayoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="#FFF"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Email "
            android:inputType="textEmailAddress" />
        <TextView
            android:layout_marginTop="5dp"
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/passwordET"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailET"
        android:layout_below="@+id/emailET"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordET"
        android:layout_alignEnd="@+id/emailET"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="-51dp"
        android:background="@drawable/rec_gradient"
        android:text="Masuk" />

    <TextView
        android:id="@+id/btn_daftar"
        android:layout_marginTop="27dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:text="Belum Punya Akun? Daftar Disini"
        android:layout_below="@+id/btn_masuk"
        />

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:text="Atau Masuk Dengan :"
            android:layout_below="@+id/btn_masuk"
            />

        <Button
            android:id="@+id/google_login"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordET"
            android:layout_alignEnd="@+id/emailET"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="-51dp"
            android:background="@drawable/rec_round"
            android:text="Masuk Dengan Google"
            android:drawableStart="@drawable/ic_google_logo"/>

        <Button
            android:id="@+id/facebookLogin"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordET"
            android:layout_alignEnd="@+id/emailET"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="-51dp"
            android:background="@drawable/rec_facebook"
            android:text="Masuk Dengan Facebook"
            android:textColor="@color/primaryTextColor"
            android:drawableStart="@drawable/img_facebook"/>




    </LinearLayout>
    <ImageView
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />
</RelativeLayout>